@model List<SportsApplication.Models.User>

@{
    ViewBag.Title = "Users";
}

<ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="AddUser">Add User</a>
    </li>
   
</ul>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("FirstName")
        </th>
        <th>
            @Html.DisplayName("LastName")
        </th>
        <th>
            @Html.DisplayName("TotalMatchesPlayed")
        </th>
        <th>
            @Html.DisplayName("Contactnumber")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th>
            @Html.DisplayName("DateOfBirth")
        </th>
        <th>
            @Html.DisplayName("Height")
        </th>
        <th>
            @Html.DisplayName("Weight")
        </th>


        <th></th>
    </tr>

        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalMatchesPlayed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contactnumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Height)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weight)
                    </td>
                    
                </tr>
            }

        }
    </table>
